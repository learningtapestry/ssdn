{
  "compilerOptions": {
    "target": "es3",
    "module": "commonjs",
    "declaration": true,
    "noEmit": true,
    "strict": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types", "types"],
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules", "types"]
}
